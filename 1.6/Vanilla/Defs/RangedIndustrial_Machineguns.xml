<Defs>
  <!--=Machineguns=-->
  <!--Navid-->
  <ThingDef ParentName="BaseHumanMakeableGun" Name="HID_BaseNavid" Abstract="True">
    <description>Navid is a medium machine gun serving as a powerful support weapon. It uses 9.3x64mm ammunition. Navid's weight of over 12kg makes it quite difficult to fire from the standing position, but when deployed, it is a precise and deadly machine gun with outstanding suppressive effect.</description>
    <graphicData>
      <drawSize>(1.595,1.595)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>1</generateCommonality>
    <equippedDistanceOffset>0.24</equippedDistanceOffset>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <statBases>
      <WorkToMake>46000</WorkToMake>
      <Mass>12.91</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.48</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.26</AccuracyLong>
      <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <AimingDelayFactor>-0.10</AimingDelayFactor>
    </equippedStatOffsets>
    <costList>
      <Steel>95</Steel>
      <ComponentIndustrial>9</ComponentIndustrial>
      <Chemfuel>15</Chemfuel>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>HIDBullet_93mmBrenneke</defaultProjectile>
        <warmupTime>1.8</warmupTime>
        <range>30.9</range>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <burstShotCount>10</burstShotCount>
        <soundCast>HID_Shot_A3Navid</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
